<div class="container">
    <div class="row">
      <div class="col-sm-9 offset-sm-2 " id="form-color">
        <div class="form-login">
          <h1>Add a new experience</h1>
          <%= simple_form_for @experience do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :price %>
            <%= f.input :country, as: :text %>
            <%= f.input :address, :label => "Location" %>
            <%= f.input :kid_friendly, :label => "Suitable for children?" %>
            <%= f.input :duration, :label => "Duration" %>
            <%= f.input :max_guests, :label => "Maximum number of guests" %>
            <%= f.input :language,  :label => "Language"%>
            <%= f.button :submit, class: "btn btn-primary" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
