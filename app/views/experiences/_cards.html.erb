<div class="cards-list d-flex justify-content-between flex-wrap flex-grow-1 mt-4 mr-4">
  <% @experiences.each do |experience| %>
    <%= link_to experience_path(experience) do %>
      <div class="card-trip mb-4" >
        <div class="card-photo">
          <% if experience.photos.attached? %>
            <div class="card-image"><%= cl_image_tag experience.photos[0].key, crop: :fill %></div>
          <% else %>
            <div class="card-image"><%= image_tag 'https://images.pexels.com/photos/335393/pexels-photo-335393.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=200&w=300' %></div>
          <% end %>
        </div>
        <div class="card-trip-infos d-flex justify-content-end align-items-center flex-column pb-3">
          <div class="host-image">
            <% if experience.host.photo.attached? %>
              <%= cl_image_tag(experience.host.photo.key, width: 40, height: 40, class: "avatar-card dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
            <% else %>
              <img class="avatar-card dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%=asset_path('profile.jpg')%>" />
            <% end %>
            <p ><%= experience.host.name %></p>
          </div>
          <% if experience.kid_friendly == true %>
            <%= image_tag "family.png", class: "kid-friendly" %>
          <% end %>
          <h2><%= experience.name %></h2>
          <p><%= experience.address %> </p>
        </div>
        <div class="card-spec-info d-flex justify-content-between">
          <div class="d-flex justify-content-center align-items-center flex-column border-right w-25">
            <p> Â£<%= experience.price %> </p>
            <p>PRICE</p>
          </div>
          <div class="d-flex justify-content-center align-items-center flex-column border-right w-50">
            <p> <%= experience.duration %> hours </p>
            <p>DURATION</p>
          </div>
          <div class="d-flex justify-content-center align-items-center flex-column w-25">
            <% if experience.average_rating == 0 %>
              <p>no ratings</p>
            <% else %>
              <p><%= experience.average_rating %>/5</p>
            <% end %>
            <p>RATING</p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

