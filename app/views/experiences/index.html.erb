<div class="container-fluid ">
  <%= render "searchbar" %>

  <div class="d-flex justify-content-between mx-3">
    <div class="dropdown country-tag">
      <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Country
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <% @countries.each do |country| %>
          <%= link_to ISO3166::Country[country], experiences_path(query: params[:query], filter: country), class: "dropdown-item"  %>
        <% end %>
      </div>
    </div>
    <div class="d-flex flex-wrap">
      <% Category.all.each do |category| %>
        <%= link_to category.name, experiences_path(category: category.id), class: "category-tag #{'category-active' if params[:category] == category.id.to_s}"  %>
      <% end %>
    </div>
  </div>
  <div class="d-flex mx-3">
      <%= render "cards" %>
      <%= render "map" %>
  </div>
  <br>
  <% paginate @experiences %>
</div>

