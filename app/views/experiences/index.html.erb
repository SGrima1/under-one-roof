<div class="container-fluid ">
  <%= render "searchbar" %>

  <!-- <div class="row d-flex">
    <%= link_to "United Kingdom", experiences_path(query: params[:query], filter: 'GB'), class: "country-tag"  %>
  </div> -->
  <div class="d-flex">
    <div class="dropdown country-tag">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Country
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <% @experiences.each do |experience| %>
          <%= link_to ISO3166::Country[experience.country], experiences_path(query: params[:query], filter: experience.country), class: "dropdown-item"  %>
        <% end %>
        <%#= link_to 'China', experiences_path(query: params[:query], filter: 'CN'), class: "dropdown-item"  %>
      </div>
    </div>
    <div class="d-flex flex-wrap">
      <% Category.all.each do |category| %>
        <%= link_to category.name, experiences_path(category: category.id), class: "category-tag #{'category-active' if params[:category] == category.id.to_s}"  %>
      <% end %>
    </div>
  </div>
  <div class="experience-content">
    <div class="cards-area">
      <%= render "cards" %>
      <div class="map-div">
        <%= render "map" %>
      </div>
    </div>
  </div>
  <br>
  <%# paginate @experiences %>
</div>



