<div class = "form-div">
    <div class="row">
      <div class="col-sm-12 " id="form-color">
        <div class="form-edit">
          <%= simple_form_for @experience do |f| %>
            <%= f.input :name %>
            <%= f.input :tagline %>
            <%= f.input :description %>
            <%= f.input :price %>
            <%= f.input :address, :label => "Location" %>
            <%= f.country_select :country, :label => "Country" %>
            <br>
            <br>
            <%= f.input :kid_friendly, input_html: { class: "toggle" }, :label => "Suitable for children?" %>
            <%= f.input :duration, :label => "Duration" %>
            <%= f.input :max_guests, :label => "Maximum number of guests" %>
            <%= f.input :spotify_url, :label => "Spotify Playlist Embed Link" %>
            <%= f.input :language,  :label => "Language"%>
            <div id="image-preview">
            </div>
            <%= f.input :photos, as: :file, input_html: {multiple: true, class: "d-none", id: 'photo-input'}, label_html: {class: "upload-photo"} , label: 'ðŸ“· Upload photo(s)' %>
            <br>
            <br>
            <%= f.association :categories, collection: Category.all, as: :check_boxes, wrapper: :vertical_collection_inline, input_html: { class: "box-for-change" } %>
            <div class="form-actions">
              <%= f.button :submit, class: "btn-submit-form" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <br>
</div>
