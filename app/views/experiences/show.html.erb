<div class="main-container">
  <div>
    <%= render "shared/carousel", experience: @experience %>
  </div>
  <div class="container">
    <div class="row">
      <div class="exp-card column-left">
        <div>
          <h4><%= @experience.name %></h4>
          <p><%= render "rating" , experience: @experience %></p>
          <p><%= @experience.description %></p>
        </div>
        <div class="border-bottom"></div>
        <div>
          <h4>Hosted by ...<%#= @host.name %></h4>
          <p><i class="far fa-clock"></i> 2h</p>
          <p><i class="fas fa-desktop"></i> Zoom meeting</p>
          <p><i class="fas fa-users"></i> max 6 people</p>
        </div>
         <div class="border-bottom"></div>
        <div>
          <h4>Supplies</h4>
          <p>blablablavla</p>
        </div>
      </div>
      <div class="column-form">
        <%= render "bookings/form", experience: @experience, booking: @booking %>
      </div>
    </div>
  </div>
  <div class="container reviews">
    <h2>Reviews</h2>
    <div class="review-box">
      <%= render "reviews" %>
    </div>
  </div>
</div>




