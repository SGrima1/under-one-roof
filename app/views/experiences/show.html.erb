<div class="main-container">
  <div>
    <div class="show-page_header">
      <div class="show-page-header row">
        <div class="show-page-header_content col-12 colmd-6 col-lg-5">
          <div>
            <h4><%= @experience.name %></h4>
            <p><%= render "rating" , experience: @experience %></p>
            <p><%= @experience.description %></p>
          </div>
          <div class="column-form">
            <%= render "bookings/form", experience: @experience, booking: @booking %>
          </div>
        </div>

        <div class="col-12 col-md-6 col-lg-7">
          <div>
            <%= render "shared/carousel", experience: @experience %>
          </div>
        </div>
      </div>
    </div>

    <div class="show-page_menu-header">
      <div class="class-page-menu">
        <div class="class-page-menu_wrapper">
          <div class="class-page-menu_menu-list">
            <a class="class-page-menu_link" href="#about">ABOUT</a>
            <a class="class-page-menu_link" href="#exp-reviews">REVIEWS</a>
            <a class="class-page-menu_link" href="#host">HOST</a>
          </div>
        </div>
      </div>
    </div>
    <div class="show-page_content container-fluid">
      <div class="show-page_section">
        <div id="about">
        <div class="responsive-class-section">
          <div class="row">
            <div class="col-12 col-md-4">
              <div class="responsive-class-section_header">
                <div class="responsive-class-section_title">About the class</div>
              </div>
            </div>
            <div class="col-12 col-md-8">
              <div class="responsive-class-section_content">
                <div class="about-class-section">
                  <p><%= @experience.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
    <div class="show-page_section">
        <div id="about">
        <div class="responsive-class-section">
          <div class="exp-reviews">
            <div class="col-12 col-md-4">
              <div class="responsive-class-section_header">
                <div class="responsive-class-section_title">Latest Reviews</div>
              </div>
            </div>
            <div class="col-12 col-md-8">
              <div class="responsive-class-section_content">
                <div class="about-class-section">
                  <div class="container reviews">
                    <h2>Reviews</h2>
                    <div class="review-box">
                      <%= render "reviews" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>






