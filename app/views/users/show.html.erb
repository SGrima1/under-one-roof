<div class="container">
  <br>
  <h1>Hello <strong><%= @user.name %></strong></h1>
  <hr>
  <div class="row">
    <div class="col-md-2 mb-3">
      <ul class="nav nav-pills flex-column" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Bookings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="requests-tab" data-toggle="tab" href="#requests" role="tab" aria-controls="requests" aria-selected="false">Requests</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Listings</a>
        </li>
      </ul>
    </div>
    <!-- /.col-md-4 -->
    <div class="col-md-10">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="-tab">
          <br>
          <h2>About me...</h2>
            <p><%= @user.bio %></p>
              <% if current_user == @user %>

                <div class = "form-div">
                  <div class="row">
                    <div class="col-sm-10 offset-sm-1 " id="form-color">
                     <div class="form-login">
                      <%= simple_form_for @user do |f|%>
                        <%= f.input :name, label: "Name" %>
                        <%= f.input :bio, label: "About me" %>
                        <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
                        <br>
                        <%= f.input :photo, as: :file, input_html: { class: 'd-none', id: 'photo-input-a'}, label_html: { class: 'upload-photo'}, label: 'üì∑ Upload a photo'  %>
                        <%= f.button :submit, class: "btn-submit-form" %>
                      <% end %>
                      </div>
                    </div>
                  </div>
                  <br>
                 </div>
                  <% end %>
        </div>

        <div class="tab-pane fade" id="requests" role="tabpanel" aria-labelledby="requests-tab">
          <br>
          <h2> Booking requests: </h2>
          <%= render 'request_cards' %>
          <br>
        </div>

        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <br>
          <h2> Your bookings: </h2>
          <br>
            <div class="cards-booking-list">
                <% @bookings.each do |booking| %>
                    <div class="card-booking" id = "already_booked">
                      <div class="card-booking-infos">
                        <div>
                          <h2 id="booking-card-text"> <%= booking.id %> ‚öúÔ∏è <%= booking.experience.name %> </h2>
                          <div class="confirm">
                            <% if booking.confirmation == "Accepted"%>
                              <p id="booking-card-text-acc"> <%= booking.confirmation %> ‚úÖ </p>
                              <p id="go-to-link"> <%= link_to "See booking", booking_path(booking) %></p>
                            <% elsif booking.confirmation == "Rejected" %>
                              <p id="booking-card-text-rej"> <%= booking.confirmation %> üö´ </p>
                            <% else %>
                              <p id="booking-card-text-pen"> <%= booking.confirmation %> üïî </p>
                            <% end %>

                            <p id="booking-card-delete"> <%= link_to " ‚ùå", booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" }%></p>
                          </div>
                          <div class="booking-reviews">
                              <%= render :partial =>"reviews/new", locals: {booking: booking, review: Review.new} %>
                          </div>
                        </div>
                        <h2 class="card-booking-pricing" id="booking-card-text"> </h2>
                      </div>
                    </div>
                <% end %>
            </div>
            <br>
        </div>

        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
          <br>
          <h2>Your listings:</h2>
          <br>
            <%= render 'listings_cards' %>
            <br>
        </div>
      </div>
    </div>
    <!-- /.col-md-8 -->
  </div>
</div>
