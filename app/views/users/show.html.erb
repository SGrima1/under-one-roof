<div class="container">
  <h1>Hello <strong><%= @user.name %></strong></h1>
  <hr>
  <div class="row">
    <div class="col-md-2 mb-3">
      <ul class="nav nav-pills flex-column" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Bookings</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Experiences</a>
        </li>
      </ul>
    </div>
    <!-- /.col-md-4 -->
    <div class="col-md-10">
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="-tab">
          <h2>About me</h2>
            <p><%= @user.bio %></p>
              <% if current_user == @user %>
                <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>
              <% end %>
        </div>

        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
          <h2> Bookings to confirm: </h2>
          <% @experiences.each do |experience| %>
            <% experience.bookings.each do |booking| %>
              <% if booking.confirmation == "Pending" %>
                <%= experience.name %>
                <%= link_to "Accept", accept_experience_booking_path(experience_id: experience.id, booking_id: booking.id), method: :patch %>
                <%= link_to "Reject", reject_experience_booking_path(experience_id: experience.id, booking_id: booking.id), method: :patch %>
              <% end %>
            <% end %>
          <% end %>

          <h2> Your bookings: </h2>

          <% @bookings.each do |booking| %>
            ID: <%= booking.id %> - <%= booking.experience.name %> -  <p> Status:
            <%= booking.confirmation  %>
            <%= link_to "❌", booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" }%></p>
            <br>
          <% end %>
        </div>

        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
        <h2>Your listing:</h2>
          <%= render 'experiences/cards' %>

          <!-- <h2> Your experiences </h2>
          <% @experiences.each do |experience| %>
            <%= experience.name %> ⚡️
          <% end %> -->
        </div>
      </div>
    </div>
    <!-- /.col-md-8 -->
  </div>
</div>
