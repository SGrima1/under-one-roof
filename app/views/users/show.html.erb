<h1>Users#show</h1>
<br>
<%= render 'request_cards' %>
<br>
<div class="container">
  <h2> Your bookings: </h2>
  <div class="cards-list">
      <% @bookings.each do |booking| %>
          <div class="card-trip" id = "already_booked">
            <div class="card-trip-infos">
              <div>
                <h2 id="booking-card-text"> <%= booking.id %> ⚜️ <%= booking.experience.name %> </h2>
                <div class="confirm">
                  <% if booking.confirmation == "Accepted"%>
                    <p id="booking-card-text-acc"> <%= booking.confirmation %> ✅ </p>
                  <% elsif booking.confirmation == "Rejected" %>
                    <p id="booking-card-text-rej"> <%= booking.confirmation %> 🚫 </p>
                  <% else %>
                    <p id="booking-card-text-pen"> <%= booking.confirmation %> 🕔 </p>
                  <% end %>
                  <p id="booking-card-delete"> <%= link_to " ❌", booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to cancel this booking?" }%></p>
                </div>

              </div>
              <h2 class="card-trip-pricingc" id="booking-card-text"> </h2>
            </div>
          </div>
      <% end %>
  </div>
</div>
<br>
<div class="container">
  <h2> Your experiences </h2>
    <%= render '/experiences/cards' %>
</div>
<br>
