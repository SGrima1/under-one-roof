<div class="d-flex justify-content-start">
  <div><h2>Your Listing</h2></div>
  <div class="pl-3">
    <div class="btn btn-primary btn-edit-exp">
      <%= link_to new_experience_path do %>
       Add a new listing <i class="fas fa-plus-square"></i>
    </div>
    <% end %>
  </div>
</div>


<div class="cards-booking-list">
  <% @experiences.each do |experience| %>
    <div class="card-listing d-flex align-items-center m-3">
      <%= link_to experience_path(experience) do %>
      <div class="d-flex justify-content-between align-items-center">
        <% if experience.photos.attached? %>
          <%= cl_image_tag experience.photos[0].key, width: 200, height: 150, crop: :fill, class: "booking-image" %>
        <% else %>
          <%= image_tag 'https://images.pexels.com/photos/335393/pexels-photo-335393.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=150&w=200', class: "booking-image" %>
        <% end %>
          <div class='p-3'>
            <div>
              <h3 class='ml-2'> <%= experience.name %> </h3>
              <!-- <p class='ml-2'> £<%= experience.price %> </p> -->
            </div>
            <div class="d-flex">
              <% if experience.host_id == current_user.id %>
                  <button type="button" class="btn btn-primary" id="listing-edit-button"><%= link_to experience_path(experience) do  %>
                   Edit  <i class="far fa-edit"></i>
                  <% end %>
                  </button>

                  <div class="ml-2">
                  <%= link_to "Delete", experience_path(experience), method: :delete, id: "sweet-alert-#{experience.id}-delete", class: "hidden d-none" %>
                    <button id="<%= "sweet-alert-#{experience.id}" %>" class="btn btn-primary listing-delete-button sweetalert"> Delete  <i class="far fa-trash-alt"></i></i> </button>
                  <% end %>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>




